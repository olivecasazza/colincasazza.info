{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/wasm/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "libs/wasm",
        "commands": [
          "wasm-pack build --debug -t web"
        ]
      },
      "configurations": {
        "production": {
          "commands": [
            "wasm-pack build -t web"
          ]
        }
      }
    },
    "test": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "libs/wasm",
        "commands": [
          "wasm-pack test --chrome"
        ]
      }
    }
  },
  "tags": []
}
